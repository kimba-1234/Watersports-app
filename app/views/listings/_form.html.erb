<%= simple_form_for(listing) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :user, input_html: { value: user.vendor_name, disabled: :true } %>
    <%= f.input :location %>
    <%= f.input :duration %>
    <!-- Added an image upload field -->
    <%= f.input :image, as: :file, label: "Add Listing Images" %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
