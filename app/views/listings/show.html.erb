<div class="container my-3">
  <div class="w-75 bg-white my">
    <h2 class="card-title"><%= @listing.title %></h2>
        <div class="row">
          <div class="column">
            <img src="https://img.jakpost.net/c/2017/01/26/2017_01_26_20163_1485417604._large.jpg" alt="Snow" style="width:100%">
          </div>
          <div class="column">
            <img src="https://img.jakpost.net/c/2017/01/26/2017_01_26_20163_1485417604._large.jpg" alt="Forest" style="width:100%">
          </div>
          <div class="column">
            <img src="https://img.jakpost.net/c/2017/01/26/2017_01_26_20163_1485417604._large.jpg" alt="Mountains" style="width:100%">
          </div>
        </div>
  </div>

  <div class="card border-light mb-3 bg-white w-75">
    <div class="card-body">
      <strong>Description</strong><br>
      <p><%= @listing.description %></p>
      <strong>Vendor</strong> <br>
      <p><%= @listing.user.vendor_name %></p>
      <strong>Location</strong>
      <p><%= @listing.location %></p>
      <strong>Activity duration</strong>
      <p><%= @listing.duration %> hours</p>
      <p>Tour price: $<%= @listing.price %></p>
    </div>
  </div>

  <%= cl_image_tag @listing.image.key if @listing.image.attached? %>

  <div class="card w-75 mb-5 bg-light">
    <div class="card-body">
      <strong class="card-title pb-5">Available Slots for <%= @listing.title %></strong><br>
      <% @listing.listing_slots.each do |slot| %>
        <% timeslot = "#{slot.start_time} - #{slot.end_time}" %>
        <% @slot = slot %>
        <%= link_to timeslot, new_listing_listing_slot_booking_path(@listing, @slot, @user), class: "btn btn-secondary" %>
        <br>
      <% end %>
    </div>
  </div>

    <%= link_to "Back to see all tours", listings_path, class: "btn btn-primary" %> <br>
    <% if current_user.user_type == 'vendor' %>
      <%= link_to 'Edit Listing', edit_listing_path %> <br>
      <%= link_to "Add new slots for this listing", new_listing_listing_slot_path(@listing) %><br>
    <% end %>
</div>
